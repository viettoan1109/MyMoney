<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nvt.manager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_splash_4"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nvt.manager.ProfileActivity"/>
        <activity android:name="com.nvt.manager.CreateUserActivity" />
        <activity android:name="com.nvt.manager.PinPasswordActivity" />
        <activity android:name="com.nvt.manager.ui.AddGroupActivity" />
        <activity
            android:name="com.nvt.manager.ViewsSildeActivity"
            android:theme="@style/AppTheme.FullScreen" />

        <activity
            android:name="com.nvt.manager.MainActivity"
            android:windowSoftInputMode="adjustNothing" />

        <activity android:name="com.nvt.manager.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.nvt.manager.adapter.NotificationReceiver" />
    </application>

</manifest>